<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>IF(
ISBLANK(Phone),false,
NOT(
OR(
REGEX( Phone , &quot;[+][0-9]{1} [0-9]{3} [0-9]{7}&quot;),
REGEX( Phone , &quot;[+][0-9]{2} [0-9]{3} [0-9]{7}&quot;),
REGEX( Phone , &quot;[+][0-9]{3} [0-9]{3} [0-9]{7}&quot;)
)
)
)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Please enter phone in &quot;+XX XXX XXXXXXX&quot; format (Ex: +49 123 1234567).</errorMessage>
</ValidationRule>
