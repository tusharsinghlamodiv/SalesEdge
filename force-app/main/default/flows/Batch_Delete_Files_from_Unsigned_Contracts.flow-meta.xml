    <recordDeletes>
        <name>Delete_Content_Document_Record_s</name>
        <label>Delete Content Document Record(s)</label>
        <locationX>50</locationX>
        <locationY>1428</locationY>
        <connector>
            <targetReference>Update_Contracts_with_the_Batch_Date</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>In</operator>
