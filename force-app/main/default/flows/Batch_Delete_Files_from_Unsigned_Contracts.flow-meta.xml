        <locationY>516</locationY>
        <collectionReference>Get_Contract_Record</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Add_to_Contract_Ids_list_and_Update_Batch_Processed_Date</targetReference>
        </nextValueConnector>
