<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <assignments>
        <description>Add Contract Id value of the current record to the collection variable and Set the Batch Processed Date field to todays date.</description>
        <name>Add_to_Contract_Ids_list_and_Update_Batch_Processed_Date</name>
        <label>Add to Contract Ids list and Update Batch Processed Date</label>
        <locationX>270</locationX>
        <locationY>636</locationY>
        <assignmentItems>
            <assignToReference>var_contractIds</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Gather_Contract_Ids.Id</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Gather_Contract_Ids.Batch_Processed_Date__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>var_for_TodaysDate</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Gather_Contract_Ids</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>Create_Content_Document_Ids_List</name>
        <label>Create Content Document Ids List</label>
        <locationX>138</locationX>
        <locationY>1212</locationY>
        <assignmentItems>
            <assignToReference>var_contentDocumentIds</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Gather_Content_Document_Ids.ContentDocumentId</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Gather_Content_Document_Ids</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>ContentDocumentLinks_Exist</name>
        <label>ContentDocumentLinks Exist?</label>
        <locationX>182</locationX>
        <locationY>972</locationY>
        <defaultConnectorLabel>Default Outcome - No - Records Not Found</defaultConnectorLabel>
        <rules>
            <name>Yes_ContentDocumentLink_s_Exists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_ContentDocumentLink_Records</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Gather_Content_Document_Ids</targetReference>
            </connector>
            <label>Yes - ContentDocumentLink(s) Exists</label>
        </rules>
    </decisions>
    <decisions>
        <name>Matching_Contracts_Exist</name>
        <label>Matching Contracts Exist?</label>
        <locationX>380</locationX>
        <locationY>396</locationY>
        <defaultConnectorLabel>Default Outcome - No - Records Not Found</defaultConnectorLabel>
        <rules>
            <name>Yes_Matching_Contracts_Exists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Contract_Record</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Gather_Contract_Ids</targetReference>
            </connector>
            <label>Yes - Matching Contracts Exists</label>
        </rules>
    </decisions>
    <description>Batch job used to delete older files (one year after the end date) from unsigned contracts</description>
    <environments>Default</environments>
    <formulas>
        <description>Calculate the date which is 365 days back from today.</description>
        <name>var_for_date365DaysAgo</name>
        <dataType>Date</dataType>
        <expression>TODAY()-365</expression>
    </formulas>
    <formulas>
        <name>var_for_TodaysDate</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
    <interviewLabel>Batch: Delete Files from Contract {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Batch: Delete Files from Unsigned Contracts</label>
    <loops>
        <name>Gather_Content_Document_Ids</name>
        <label>Gather Content Document Ids</label>
        <locationX>50</locationX>
        <locationY>1092</locationY>
        <collectionReference>Get_ContentDocumentLink_Records</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Create_Content_Document_Ids_List</targetReference>
